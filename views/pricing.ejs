  <script>
    // Checkbox handler
    document.addEventListener("DOMContentLoaded", function () {
      const checkbox = document.getElementById("customCheck2");
      if (checkbox) {
        const promoDiv = checkbox.closest('.mb-3').nextElementSibling;
  
        checkbox.addEventListener("change", function () {
          promoDiv.hidden = !checkbox.checked;
        });
      }
    });
  
    const promoInput = document.getElementById("promo");
    if (promoInput) {
      promoInput.addEventListener("input", function () {
        const promoCode = this.value.trim();
        const promoAlert = document.getElementById("promoAlert");
  
        if (promoCode.length > 2) { // Ensure input is not empty
          fetch('/check-promo', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ promo: promoCode })
          })
          .then(response => response.json())
          .then(data => {
            if (data.valid) {
              console.log("Promo code is valid!");
              promoAlert.hidden = false; // Show the message
              // promoAlert.textContent = `Save ${data.discount}%`; // Update discount message dynamically
            } else {
              console.log("Invalid promo code.");
              promoAlert.hidden = true; // Hide the message
            }
          })
          .catch(error => console.error("Error:", error));
        } else {
          promoAlert.hidden = true; // Hide if promo is empty
        }
      });
    }
  
    document.querySelectorAll(".proceedBtn").forEach(button => {
      button.addEventListener("click", function () {
        // Find the closest modal and get input values from it
        const modal = this.closest(".modal");
        const formData = {
          name: modal.querySelector("input[name='name']").value.trim(),
          email: modal.querySelector("input[name='email']").value.trim(),
          mobile: modal.querySelector("input[name='mobile']").value.trim(),
          promo: modal.querySelector("input[name='promo']") ? modal.querySelector("input[name='promo']").value.trim() : "",
          amount: modal.querySelector("input[name='amount']").value.trim()
        };
  
        fetch('/submit-form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const queryParams = new URLSearchParams({
              amount: data.amount,
              promo: data.promo,
              promoter: data.promoter
            }).toString();
  
            window.location.href = `/paymentGateway?${queryParams}`;
          } else {
            alert("Error submitting form.");
          }
        })
        .catch(error => console.error("Error:", error));
      });
    });
  </script>
