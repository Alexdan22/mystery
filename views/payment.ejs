  <script>
    
    async function fetchQR() {
        try {
            const amount = document.getElementById('amountQuery').value;
            const response = await fetch(`/generateQR?amount=${amount}`);
            const data = await response.json();
            document.getElementById('qrcode').src = data.url;
        } catch (error) {
            console.error("Error fetching QR Code:", error);
        }
    }

    window.addEventListener("load", fetchQR);

    //Payment verification
    const paymentVerification = function(){

        amount = document.getElementById('amountQuery').value;
        trnxId = document.getElementById('utrNumber').value;
        promo = document.getElementById('promo').value;
        promoter = document.getElementById('promoter').value;
        console.log(amount, trnxId);
        
        $.ajax({
        url: '/api/paymentVerification',
        // dataType: "jsonp",
        data: {
            amount: amount,
            trnxId: trnxId,
            promo: promo,
            promoter: promoter
        },
        type: 'POST',
        success: function (data) {
            if( data.redirect == undefined){
            if(data.alert == 'true'){
                
                document.getElementById('alert-Tab').innerHTML = `
                  <div class="mb-2 alert bg-dark-subtle text-white alert-dismissible fade show mb-0" role="alert">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong>${data.alertType} - </strong> ${data.message}
                  </div>`
  
                    var div = document.getElementById("alert-Tab");
                    div.style.opacity = "1";
                    div.style.display = "block";

            }
            if(data.alertType == 'Success'){
            dashboard2000();
            }
            }else{
            login2000();
            }

        },
        error: function (status, error) {
            console.log('Error: ' + error.message);
        }
      });
    }

  </script>
